@model IEnumerable<Northwind.Models.Orders>
@*@model Northwind.Controllers.OrdersController*@


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Customer.ContactName)*@
                Customer
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.EmployeeId)*@
                Employee
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiredDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Regions.RegionDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipPostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipCountry)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.CustomerId)*@
                    @Html.DisplayFor(modelItem => item.Customers.ContactName)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.EmployeeId)*@
                    @Html.DisplayFor(modelItem => item.Employees.FirstName)  @Html.DisplayFor(modelItem => item.Employees.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequiredDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipCity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Regions.RegionDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipPostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipCountry)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-orderId="@item.OrderId">Edit</a> |
                    <a asp-action="Details" asp-route-orderId="@item.OrderId">Details</a> |
                    <a asp-action="Delete" asp-route-orderId="@item.OrderId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if ((int)ViewData["page"] != 0)
{
    <partial name="../Shared/Components/_PaginationControl" />    
}