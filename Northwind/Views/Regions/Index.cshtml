@model IEnumerable<Northwind.Models.Regions>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegionDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RegionId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegionDescription)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-regionId="@item.RegionId">Edit</a> |
                    <a asp-action="Details" asp-route-regionId="@item.RegionId">Details</a> |
                    <a asp-action="Delete" asp-route-regionId="@item.RegionId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if ((int)ViewData["page"] != 0)
{
    <partial name="../Shared/Components/_PaginationControl" />
}