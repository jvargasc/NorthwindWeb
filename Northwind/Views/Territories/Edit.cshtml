@model Northwind.Models.Territories

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/handleDropDown.css" type="text/css" />

<h2>Edit</h2>

<h4>Territories</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<input type="hidden" asp-for="Id" />*@
            <div class="form-group">
                <label asp-for="TerritoryId" class="control-label"></label>
                <input asp-for="TerritoryId" class="form-control" readonly />
                <span asp-validation-for="TerritoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TerritoryDescription" class="control-label"></label>
                <input asp-for="TerritoryDescription" class="form-control" />
                <span asp-validation-for="TerritoryDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegionId" class="control-label"></label>
                <select class="form-control" asp-for="RegionId"
                        asp-items="@((List<SelectListItem>)ViewData["Regions"])"></select>
                <span asp-validation-for="RegionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

